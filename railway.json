{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd server && mvn clean package -DskipTests && cd ../front-end && npm install && npm run build"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd server && java -Dserver.port=$PORT $JAVA_OPTS -jar target/*.jar",
    "restartPolicyMaxRetries": 5
  }
}
